---
import { Image } from 'astro:assets'
const { data, slug } = Astro.props
---

<a href={`/communities/${slug}`} class="group">
  <article
    class="group-hover:-translate-y-[5px] transition-all duration-75 ease-linear group-hover:ring-gray-200 ring-1 ring-gray-100 rounded-2xl"
  >
    {
      data.logoImage ? (
        <Image
          class="transition-all duration-75 ease-linear object-cover rounded-2xl ring-1 group-hover:ring-green-300 ring-gray-200"
          width={450}
          height={450}
          src={data.logoImage}
          alt={data.title}
          format={'avif'}
          quality={'higt'}
        />
      ) : (
        <div class="rounded-2xl bg-gray-50 w-full h-full aspect-square ring-1 group-hover:ring-green-300 ring-gray-200 grid place-content-center">
          <span class="sr-only">no image</span>
          <span class="text-8xl text-gray-800">?</span>
        </div>
      )
    }
    <div class="flex flex-col gap-1 p-3">
      <h3 class="font-medium leading-tight break-words">{data.title}</h3>
      <p class="text-gray-600">{data.soon}</p>
    </div>
  </article>
</a>
